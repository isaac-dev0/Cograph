datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum ProjectRole {
    OWNER
    ADMIN
    MEMBER
    GUEST
}

enum ProjectStatus {
    ACTIVE
    ARCHIVED
}

model Profile {
    id          String   @id @default(uuid())
    userId      String   @unique @map("user_id")
    email       String   @unique
    displayName String
    job         String?
    location    String?
    avatarUrl   String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    projectsOwned Project[]       @relation("ProjectsOwned")
    projects      ProjectMember[] @relation("UserMemberships")

    @@map("profiles")
}

model Project {
    id          String        @id @default(uuid())
    name        String
    description String?
    ownerId     String        @map("owner_profile_id")
    status      ProjectStatus @default(ACTIVE)
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt

    owner   Profile         @relation("ProjectsOwned", fields: [ownerId], references: [id])
    members ProjectMember[] @relation("ProjectMemberships")

    @@map("projects")
}

model ProjectMember {
    profileId String      @map("profile_id")
    projectId String      @map("project_id")
    role      ProjectRole @default(GUEST)
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    member  Profile @relation("UserMemberships", fields: [profileId], references: [id])
    project Project @relation("ProjectMemberships", fields: [projectId], references: [id])

    @@id([profileId, projectId])
    @@map("project_members")
}
