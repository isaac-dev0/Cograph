generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum ProjectRole {
    OWNER
    ADMIN
    MEMBER
    GUEST
}

enum ProjectStatus {
    ACTIVE
    ARCHIVED
}

enum SyncStatus {
    PENDING
    SYNCING
    SYNCED
    FAILED
}

enum AnalysisStatus {
    PENDING
    CLONING
    ANALYSING
    COMPLETED
    FAILED
}

model Profile {
    id          String   @id @default(uuid()) @db.Uuid
    userId      String   @unique @map("user_id") @db.Uuid
    email       String   @unique
    displayName String   @map("display_name")
    job         String?
    location    String?
    avatarUrl   String?  @map("avatar_url")
    githubToken String?  @map("github_token")
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

    projectsOwned      Project[]       @relation("ProjectsOwned")
    projectMemberships ProjectMember[]

    @@map("profiles")
}

model Project {
    id          String        @id @default(uuid()) @db.Uuid
    name        String
    description String?
    icon        String?       @map("logo_url")
    ownerId     String        @map("owner_profile_id") @db.Uuid
    status      ProjectStatus @default(ACTIVE)
    createdAt   DateTime      @default(now()) @map("created_at")
    updatedAt   DateTime      @default(now()) @updatedAt @map("updated_at")
    archivedAt  DateTime?     @map("archived_at")

    owner        Profile             @relation("ProjectsOwned", fields: [ownerId], references: [id], onDelete: Cascade)
    members      ProjectMember[]
    repositories ProjectRepository[]

    @@map("projects")
}

model ProjectMember {
    profileId String      @map("profile_id") @db.Uuid
    projectId String      @map("project_id") @db.Uuid
    role      ProjectRole @default(MEMBER)
    createdAt DateTime    @default(now()) @map("created_at")
    updatedAt DateTime    @default(now()) @updatedAt @map("updated_at")

    profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
    project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

    @@id([profileId, projectId])
    @@index([profileId])
    @@index([projectId, role])
    @@map("project_members")
}

model Repository {
    id              String     @id @default(uuid()) @db.Uuid
    githubId        Int        @unique @map("github_id")
    nodeId          String     @unique @map("node_id")
    name            String
    fullName        String     @map("full_name")
    description     String?
    visibility      String     @default("public")
    repositoryUrl   String     @map("repository_url")
    defaultBranch   String     @default("main") @map("default_branch")
    icon            String?    @map("icon_url")
    ownerLogin      String     @map("owner_login")
    ownerType       String     @map("owner_type")
    ownerAvatarUrl  String     @map("owner_avatar_url")
    lastSyncedAt    DateTime?  @map("last_synced_at")
    syncStatus      SyncStatus @default(PENDING) @map("sync_status")
    syncError       String?    @map("sync_error")
    isArchived      Boolean    @default(false) @map("is_archived")
    isDisabled      Boolean    @default(false) @map("is_disabled")
    isPrivate       Boolean    @map("is_private")
    githubCreatedAt DateTime   @map("github_created_at")
    githubUpdatedAt DateTime   @map("github_updated_at")
    githubPushedAt  DateTime   @map("github_pushed_at")
    createdAt       DateTime   @default(now()) @map("created_at")
    updatedAt       DateTime   @default(now()) @updatedAt @map("updated_at")
    archivedAt      DateTime?  @map("archived_at")
    syncHistory     RepositorySyncHistory[]
    projects        ProjectRepository[]
    repositoryFiles RepositoryFile[]
    analysisJobs    AnalysisJob[]

    @@index([isPrivate])
    @@index([isArchived])
    @@index([isDisabled])
    @@index([lastSyncedAt])
    @@index([syncStatus])
    @@index([githubUpdatedAt])
    @@index([ownerLogin])
    @@map("repositories")
}

model RepositorySyncHistory {
    id              String     @id @default(uuid()) @db.Uuid
    repositoryId    String     @map("repository_id") @db.Uuid
    repository      Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
    syncStartedAt   DateTime   @map("sync_started_at")
    syncCompletedAt DateTime?  @map("sync_completed_at")
    status          String
    error           String?
    filesProcessed  Int        @default(0) @map("files_processed")
    duration        Int?
    createdAt       DateTime   @default(now()) @map("created_at")

    @@index([repositoryId])
    @@index([syncStartedAt])
    @@index([repositoryId, syncStartedAt])
    @@map("repository_sync_history")
}

model ProjectRepository {
    projectId    String   @map("project_id") @db.Uuid
    repositoryId String   @map("repository_id") @db.Uuid
    createdAt    DateTime @default(now()) @map("created_at")
    updatedAt    DateTime @default(now()) @updatedAt @map("updated_at")

    project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
    repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

    @@id([projectId, repositoryId])
    @@index([projectId])
    @@index([repositoryId])
    @@map("project_repositories")
}

model RepositoryFile {
    id            String   @id @default(uuid()) @db.Uuid
    repositoryId  String   @map("repository_id") @db.Uuid
    filePath      String   @map("file_path")
    fileName      String   @map("file_name")
    fileType      String   @map("file_type")
    linesOfCode   Int      @default(0) @map("lines_of_code")
    neo4jNodeId   String?  @map("neo4j_node_id")
    annotations   String?  @db.Text
    claudeSummary String?  @map("claude_summary") @db.Text
    createdAt     DateTime @default(now()) @map("created_at")
    updatedAt     DateTime @default(now()) @updatedAt @map("updated_at")

    repository      Repository   @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
    codeEntities    CodeEntity[]
    fileAnnotations Annotation[]

    @@unique([repositoryId, filePath])
    @@index([repositoryId])
    @@index([fileType])
    @@index([neo4jNodeId])
    @@map("repository_files")
}

model Annotation {
    id              String         @id @default(uuid()) @db.Uuid
    fileId          String         @map("file_id") @db.Uuid
    title           String
    content         String         @db.Text
    tags            String[]
    linkedEntityIds String[]       @map("linked_entity_ids")
    authorId        String         @map("author_id")
    authorName      String         @map("author_name")
    createdAt       DateTime       @default(now()) @map("created_at")
    updatedAt       DateTime       @default(now()) @updatedAt @map("updated_at")

    file RepositoryFile @relation(fields: [fileId], references: [id], onDelete: Cascade)

    @@index([fileId])
    @@map("annotations")
}

model CodeEntity {
    id               String   @id @default(uuid()) @db.Uuid
    repositoryFileId String   @map("repository_file_id") @db.Uuid
    name             String
    type             String
    startLine        Int      @map("start_line")
    endLine          Int      @map("end_line")
    annotations      String?  @db.Text
    createdAt        DateTime @default(now()) @map("created_at")
    updatedAt        DateTime @default(now()) @updatedAt @map("updated_at")

    repositoryFile RepositoryFile @relation(fields: [repositoryFileId], references: [id], onDelete: Cascade)

    @@index([repositoryFileId])
    @@map("code_entities")
}

model AnalysisJob {
    id             String         @id @default(uuid()) @db.Uuid
    repositoryId   String         @map("repository_id") @db.Uuid
    status         AnalysisStatus @default(PENDING)
    progress       Float          @default(0)
    filesAnalysed  Int            @default(0) @map("files_analysed")
    totalFiles     Int?           @map("total_files")
    errorMessage   String?        @map("error_message") @db.Text
    errorDetails   String?        @map("error_details") @db.Text
    startedAt      DateTime?      @map("started_at")
    completedAt    DateTime?      @map("completed_at")
    createdAt      DateTime       @default(now()) @map("created_at")
    updatedAt      DateTime       @default(now()) @updatedAt @map("updated_at")

    repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

    @@index([repositoryId])
    @@index([status])
    @@map("analysis_jobs")
}

