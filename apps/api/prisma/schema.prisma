generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum ProjectRole {
    OWNER
    ADMIN
    MEMBER
    GUEST
}

enum ProjectStatus {
    ACTIVE
    ARCHIVED
}

enum SyncStatus {
    PENDING
    SYNCING
    SYNCED
    FAILED
}

model Profile {
    id          String   @id @default(uuid()) @db.Uuid
    userId      String   @unique @map("user_id") @db.Uuid
    email       String   @unique
    displayName String   @map("display_name")
    job         String?
    location    String?
    avatarUrl   String?  @map("avatar_url")
    githubToken String?  @map("github_token")
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

    projectsOwned      Project[]       @relation("ProjectsOwned")
    projectMemberships ProjectMember[]

    @@map("profiles")
}

model Project {
    id          String        @id @default(uuid()) @db.Uuid
    name        String
    description String?
    icon        String?       @map("logo_url")
    ownerId     String        @map("owner_profile_id") @db.Uuid
    status      ProjectStatus @default(ACTIVE)
    createdAt   DateTime      @default(now()) @map("created_at")
    updatedAt   DateTime      @default(now()) @updatedAt @map("updated_at")
    archivedAt  DateTime?     @map("archived_at")

    owner        Profile            @relation("ProjectsOwned", fields: [ownerId], references: [id], onDelete: Cascade)
    members      ProjectMember[]
    repositories ProjectRepository[]

    @@map("projects")
}

model ProjectMember {
    profileId String      @map("profile_id") @db.Uuid
    projectId String      @map("project_id") @db.Uuid
    role      ProjectRole @default(MEMBER)
    createdAt DateTime    @default(now()) @map("created_at")
    updatedAt DateTime    @default(now()) @updatedAt @map("updated_at")

    profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
    project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

    @@id([profileId, projectId])
    @@map("project_members")
}

model Repository {
    id              String     @id @default(uuid()) @db.Uuid
    githubId        Int        @unique @map("github_id")
    nodeId          String     @unique @map("node_id")
    name            String
    fullName        String     @map("full_name")
    description     String?
    visibility      String     @default("public")
    repositoryUrl   String     @map("repository_url")
    icon            String?    @map("icon_url")
    /**
     * Owner Info
     */
    ownerLogin      String     @map("owner_login")
    ownerType       String     @map("owner_type")
    ownerAvatarUrl  String     @map("owner_avatar_url")
    /**
     * Sync
     */
    lastSyncedAt    DateTime?  @map("last_synced_at")
    syncStatus      SyncStatus @default(PENDING) @map("sync_status")
    syncError       String?    @map("sync_error")
    /**
     * Flags
     */
    isArchived      Boolean    @default(false) @map("is_archived")
    isDisabled      Boolean    @default(false) @map("is_disabled")
    isPrivate       Boolean    @map("is_private")
    /**
     * Timestamps
     */
    githubCreatedAt DateTime   @map("github_created_at")
    githubUpdatedAt DateTime   @map("github_updated_at")
    githubPushedAt  DateTime   @map("github_pushed_at")
    createdAt       DateTime   @default(now()) @map("created_at")
    updatedAt       DateTime   @default(now()) @updatedAt @map("updated_at")
    archivedAt      DateTime?  @map("archived_at")

    syncHistory     RepositorySyncHistory[]
    projects        ProjectRepository[]

    @@index([isPrivate])
    @@index([isArchived])
    @@index([isDisabled])
    @@index([lastSyncedAt])
    @@index([syncStatus])
    @@index([githubUpdatedAt])
    @@index([ownerLogin])
    @@map("repositories")
}

model RepositorySyncHistory {
    id              String     @id @default(uuid()) @db.Uuid
    repositoryId    String     @map("repository_id") @db.Uuid
    repository      Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
    syncStartedAt   DateTime   @map("sync_started_at")
    syncCompletedAt DateTime?  @map("sync_completed_at")
    status          String
    error           String?
    filesProcessed  Int        @default(0) @map("files_processed")
    duration        Int?
    createdAt       DateTime   @default(now()) @map("created_at")

    @@index([repositoryId])
    @@index([syncStartedAt])
    @@map("repository_sync_history")
}

model ProjectRepository {
    projectId    String   @map("project_id") @db.Uuid
    repositoryId String   @map("repository_id") @db.Uuid
    createdAt    DateTime @default(now()) @map("created_at")
    updatedAt    DateTime @default(now()) @updatedAt @map("updated_at")

    project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
    repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

    @@id([projectId, repositoryId])
    @@index([projectId])
    @@index([repositoryId])
    @@map("project_repositories")
}
